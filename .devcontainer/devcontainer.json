{
  "name": "veroXis Streamlit App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "veroxis.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },

  "updateContentCommand": "pip3 install --user -r requirements.txt && pip3 install --user streamlit black pylint isort && echo 'âœ… Packages installed and Requirements met'",
  
  "postAttachCommand": {
    "server": "streamlit run veroxis.py --server.enableCORS false --server.enableXsrfProtection false"
  },

  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [8501],

  // Optional features for better development experience
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Mount local .ssh directory for git operations
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],

  // Environment variables
  "remoteEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}"
  }
}